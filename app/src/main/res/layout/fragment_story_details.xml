<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:id="@+id/storyImageView"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/glass_dark"
        />

    <Button
        android:layout_width="236dp"
        android:layout_height="69dp"
        android:text="@string/make_your_own"
        android:drawableLeft="@drawable/icon_create_movie_small"
        android:id="@+id/makeYourOwnButton"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Story Description"
        android:id="@+id/storyDescription"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/remakesGridView"
        tools:listitem="@android:layout/simple_list_item_2"
        android:numColumns="2" />

</LinearLayout>