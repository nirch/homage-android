<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

    <VideoView android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />

    <Button android:id="@+id/touchVideoButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        />

    <ImageView android:id="@+id/videoThumbnailImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        />

    <LinearLayout android:id="@+id/videoControls"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/homage_darker_transparent_overlay"
        android:weightSum="3"
        >

        <ImageButton android:id="@+id/videoStopButton"
            style="@style/videoPlayerButton"
            android:src="@drawable/selector_video_button_stop"
            />

        <ImageButton android:id="@+id/videoPlayPauseButton"
            style="@style/videoPlayerButton"
            android:src="@drawable/selector_video_button_play"
            />

        <!--<ImageButton android:id="@+id/videoFullScreenButton"-->
            <!--style="@style/videoPlayerButton"-->
            <!--android:src="@drawable/selector_video_button_fullscreen"-->
            <!--/>-->

    </LinearLayout>



    <ProgressBar android:id="@+id/videoFragmentLoading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        />

    <android.widget.IconButton
        android:id="@+id/videoBigPlayButton"
        style="@style/remakeText"
        android:textSize="34dp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:visibility="gone"
        />



</RelativeLayout>
