<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/homage_borders"
        android:layout_alignParentBottom="true"
        />

    <ImageButton android:id="@+id/navButton"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_nav_button"
        />

    <TextView android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/nav_item_1_stories"
        style="@style/headerText" />


    <ImageButton android:id="@+id/refreshButton"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_refresh"
        android:visibility="gone"
        />

    <ProgressBar android:id="@+id/refreshProgress"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />

</RelativeLayout>