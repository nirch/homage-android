<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    android:orientation="vertical"
    android:background="@color/homage_black"
    >

    <ImageView android:id="@+id/storyImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true" />

    <ImageView android:id="@+id/storyImageHighlight"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.6"
        android:background="@drawable/selector_story_fg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/cell_gradient"
        android:layout_alignParentBottom="true"
        >

        <TextView android:id="@+id/storyName"
            style="@style/storiesCellText"
            android:paddingLeft="10dp"
            android:text="@string/placeholder_story_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView android:id="@+id/remakesIcon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/small_remake_icon"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            />

        <TextView android:id="@+id/storyRemakesCount"
            style="@style/storiesCellText"
            android:paddingRight="0dp"
            android:text="4"
            android:layout_toLeftOf="@+id/remakesIcon"

            />


    </RelativeLayout>


</RelativeLayout>