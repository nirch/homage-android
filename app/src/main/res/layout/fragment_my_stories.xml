<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myStoriesScreen"
    >

    <!-- The camera preview container -->
    <ImageView android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_void"
        android:scaleType="fitXY"
        />

    <ListView android:id="@+id/myStoriesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:visibility="visible"
        />

    <TextView android:id="@+id/noRemakesMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/impact"
        android:text="@string/no_remakes"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="130dp"
        android:visibility="gone"
        />

    <Button android:id="@+id/remakeAStoryButton"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="@string/remake_a_story_button"
        android:drawableLeft="@drawable/icon_remake_black"
        android:drawableStart="@drawable/icon_remake_black"
        android:layout_gravity="center_horizontal"
        style="@style/HomageImpactButtonBigTextBlack"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"

        />

 </RelativeLayout>