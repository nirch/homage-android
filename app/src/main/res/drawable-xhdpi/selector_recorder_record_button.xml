<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/record" />
            <stroke android:width="18px" android:color="@color/record_button_stroke"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient android:angle="270"
                android:startColor="@color/record_highlight"
                android:endColor="@color/record" />
            <stroke android:width="18px" android:color="@color/record_button_stroke"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/record" />
            <stroke android:width="14px" android:color="@color/record_button_stroke"/>
        </shape>
    </item>
</selector>