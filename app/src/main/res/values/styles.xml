<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base.AppCompat">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarStyle">@style/HomageActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="HomageActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Remake" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SceneText">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/homage_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SceneTextImpact">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/homage_impact</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomageBigTitle">
        <item name="android:textSize">34dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/homage_text</item>
    </style>

    <style name="HomageMediumTitle">
        <item name="android:textSize">26dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/homage_text</item>
    </style>

    <style name="HomageSmallTitle">
        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/homage_text</item>
    </style>

    <style name="HomageSmallVideoTitleImpact">
        <item name="android:textSize">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/homage_impact</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/homage_dark_void_2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="HomageDarkOverlay">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/homage_dark_overlay</item>
    </style>

    <style name="HomageImpactButtonsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/homage_void</item>
    </style>

    <style name="HomageVideosPageIndicator">
        <item name="android:layout_marginBottom">58dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">14dp</item>
    </style>

    <style name="HomageImpactButton">
        <item name="android:textSize">11dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_impact_button</item>
        <item name="android:textColor">@color/homage_button_text</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HomageImpactButtonBigText">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_impact_button</item>
        <item name="android:textColor">@color/homage_button_text</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HomageImpactButtonBigTextBlack">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/homage_button_text</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HomageRecorderOnTopButton">
        <item name="android:background">@drawable/selector_recorder_ontop_button_bg</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:imageButtonStyle">?android:actionButtonStyle</item>
    </style>

    <style name="weightedWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="HCenteredText" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="actionButton">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_action_button_bg</item>
        <item name="android:textColor">@color/homage_record_button</item>
        <item name="android:textSize">23dp</item>
        <item name="android:shadowColor">@color/homage_dark_void_2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="actionButtonWhite">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_action_button_bg</item>
        <item name="android:textColor">@color/homage_record_button_stroke</item>
        <item name="android:textSize">20dp</item>
        <item name="android:shadowColor">@color/homage_dark_void_2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="textButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_action_button_bg</item>
        <item name="android:textColor">@color/homage_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="centeredImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="videoPlayerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="storiesCellText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/homage_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">@color/homage_impact</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@color/homage_button_text</item>
    </style>

    <style name="greyDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/holo_gray_bright</item>
    </style>

    <style name="storyDetailsText">
        <item name="android:textColor">@color/homage_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@color/homage_button_text</item>
    </style>

    <style name="remakeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/homage_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
