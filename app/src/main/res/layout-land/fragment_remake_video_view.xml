    <ImageView android:id="@+id/remakeThumbnailImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"
        android:background="@null"
        android:visibility="gone"
        />

    <ProgressBar android:id="@+id/videoFragmentLoading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <LinearLayout android:id="@+id/videoControls"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/videoView"
        android:background="@android:color/transparent"
        android:weightSum="3"
        android:visibility="gone"
        >

        <ImageButton
            android:id="@+id/likedButton"
            style="@style/videoPlayerButton"
            android:src="@drawable/selector_my_like_button"
            />

        <ImageButton android:id="@+id/videoStopButton"
            style="@style/videoPlayerButton"
            android:src="@drawable/selector_video_button_stop"
            />

        <ImageButton android:id="@+id/videoPlayPauseButton"
            style="@style/videoPlayerButton"
            android:src="@drawable/selector_video_button_play"
            />

        <ImageButton android:id="@+id/videoFullScreenButton"
            style="@style/videoPlayerButton"
            android:src="@drawable/selector_video_button_fullscreen"
            />

    </LinearLayout>
</RelativeLayout>
