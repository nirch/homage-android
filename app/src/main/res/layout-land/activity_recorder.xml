<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:background="@color/test_bg"
    tools:context=".RecorderActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/silhouette"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_preview"
        android:visibility="invisible" />

    <!-- The camera preview container -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/preview_container" />

    <!--
                    The controls drawer
               Can be dragged open or closed.
            **********************************
            *                                *
            *               ==               *
            *==============|  |==============*
            *    Scene 1    ==   ▢▢▢▢▢▢▢▢▢▢  *
            *    Scene 2    ||   ▢▢▢▢▢▢▢▢▢▢  *
            *    Scene 3    ||****************
            *    Scene 4    ||  dir | script *
            **********************************

            Allows to start recording when closed.
      Shows more info about the story/scene when opened.
    -->
    The controls drawer -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:id="@+id/recorderControlsDrawer"

        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/homage_dark_overlay"
            >
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:id="@+id/recorderShortDetailsContainer"
            android:weightSum="2"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45"
                    >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="SCENE 1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    >
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_small_clock"
                        android:layout_margin="0dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45"
                    >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="7 SEC"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Use Solid Color Background"
                    android:textColor="@color/homage_impact"
                    />

            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/recorderCloseDrawerButton"
            android:src="@drawable/close"
            android:background="@drawable/selector_recorder_close_drawer_button"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:visibility="invisible"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/recorderRecordButton"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_recorder_record_button"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>


    <!--
         Buttons overlaying the recorder.
              X - Dismiss recorder
              i - Scene info button
              C - Camera switching (front/back)

            ***********************
            *X                   C*
            *i                    *
            *                     *
            *                     *
            *                     *
            ***********************
    -->
    <ImageButton
        style="@style/HomageRecorderOnTopButton"
        android:id="@+id/recorderDismissButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_close" />

    <ImageButton
        style="@style/HomageRecorderOnTopButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon_scene_description_bw" />

    <ImageButton
        style="@style/HomageRecorderOnTopButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_camera_flip" />

</RelativeLayout>
