<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context=".RecorderActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/silhouette"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_preview"
        android:visibility="invisible" />

    <!--____________________________________________________________________
    The background preview view,
    showing to the user what the camera
    is currently seeing/recording -->
    <TextureView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/preview_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test"
        android:id="@+id/recorder_test_button"
        android:layout_gravity="center"
        />

</FrameLayout>
